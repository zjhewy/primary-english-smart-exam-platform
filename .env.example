# ==================== 数据库配置 ====================
POSTGRES_PASSWORD=your_secure_password_here
DATABASE_URL=postgresql://postgres:your_secure_password_here@postgres:5432/exam_platform

# ==================== Redis配置 ====================
REDIS_PASSWORD=your_redis_password_here
REDIS_URL=redis://:your_redis_password_here@redis:6379/0

# ==================== 应用配置 ====================
SECRET_KEY=your-secret-key-change-this-in-production-min-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440
ENVIRONMENT=development
DEBUG=True

# ==================== 阿里云OSS配置（可选）====================
# 如不配置，将使用本地文件存储
ALIYUN_OSS_ACCESS_KEY=
ALIYUN_OSS_SECRET_KEY=
ALIYUN_OSS_ENDPOINT=oss-cn-hangzhou.aliyuncs.com
ALIYUN_OSS_BUCKET=

# ==================== 前端配置 ====================
VITE_API_BASE_URL=http://localhost:8000

# ==================== 邮件配置（可选）====================
SMTP_HOST=smtp.qq.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@example.com

# ==================== 日志配置 ====================
LOG_LEVEL=INFO
LOG_FILE_PATH=/app/logs

# ==================== CORS配置 ====================
CORS_ORIGINS=http://localhost:3000,http://localhost:80,http://127.0.0.1:3000
CORS_ALLOW_CREDENTIALS=True
CORS_ALLOW_METHODS=*
CORS_ALLOW_HEADERS=*

# ==================== 文件上传配置 ====================
MAX_UPLOAD_SIZE=10485760
ALLOWED_AUDIO_FORMATS=audio/mpeg,audio/wav,audio/mp3
ALLOWED_IMAGE_FORMATS=image/jpeg,image/png,image/gif

# ==================== 考试配置 ====================
DEFAULT_EXAM_DURATION=3600
AUTO_SAVE_INTERVAL=30000
